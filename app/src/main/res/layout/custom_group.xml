<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="1dp"
                android:text="Group Title:  "
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/groupTitle"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="2"
                android:ems="10"
                android:hint="Title"
                android:inputType="textPersonName"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/numberCheck"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="fill_vertical"
                android:layout_weight="1"
                android:checked="false"
                android:text="Number of members?"
                android:textColor="#757575" />

            <EditText
                android:id="@+id/groupSize"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1.5"
                android:ems="10"
                android:hint="Number"
                android:inputType="number"
                android:textSize="14sp"
                android:visibility="visible"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/groupBound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/femaleCheck"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Number of females?"
                android:textColor="#757575" />

            <SeekBar
                android:id="@+id/femaleBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1.5"
                android:max="1"
                android:progress="0"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/femaleDisp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/maleCheck"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Number of males?"
                android:textColor="#757575" />

            <SeekBar
                android:id="@+id/maleBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1.5"
                android:max="1"
                android:progress="0"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/maleDisp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>